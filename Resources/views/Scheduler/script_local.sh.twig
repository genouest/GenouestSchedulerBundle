{% autoescape false %}
#!/bin/bash
exec 3> {{ workDir }}stdout.txt
exec 4> {{ workDir }}stderr.txt
(
    if [ ! -d {{ workDir }} ]
    then
        mkdir -p {{ workDir }}
    fi
    {{ job.command }}
) 1>&3 2>&4

{% if job.hasValidEmail %}

echo -e '{{ mailBody }}' | {{ mailBin }} {% if fromEmail %}{% for address, name in fromEmail %} -r '{{ address }} ({{ name }})'{% endfor %}{% endif %} -s '{{ mailSubject }}' {{ job.email }}

{% endif %}

rm {{ lockFileName }}
{% endautoescape %}

