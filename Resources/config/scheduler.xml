<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Scheduler classes -->
        <parameter key="scheduler.method.drmaa.class">Genouest\Bundle\SchedulerBundle\Scheduler\DrmaaScheduler</parameter>
        <parameter key="scheduler.method.local.class">Genouest\Bundle\SchedulerBundle\Scheduler\LocalScheduler</parameter>
    </parameters>
    
    <services>
        <!-- Schedulers -->
        <service id="scheduler.method" class="%scheduler.method.class%">
			<argument type="service" id="service_container" />
        </service>
        
        
        <service id="job.repository" class="Genouest\Bundle\SchedulerBundle\Entity\JobRepository" factory-service="scheduler.object_manager" factory-method="getRepository">
            <argument>Genouest\Bundle\SchedulerBundle\Entity\Job</argument>
        </service>
        
        <!-- Object Manager Service -->
        <service id="scheduler.object_manager" alias="doctrine.orm.entity_manager" />
    </services>

</container>
