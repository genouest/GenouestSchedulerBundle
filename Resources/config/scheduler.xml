<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="job.repository" class="Genouest\Bundle\SchedulerBundle\Entity\JobRepository" factory-service="scheduler.object_manager" factory-method="getRepository">
            <argument type="string">Genouest\Bundle\SchedulerBundle\Entity\Job</argument>
        </service>
        
        <service id="job.scheduler" class="Genouest\Bundle\SchedulerBundle\Scheduler\SchedulerInterface" factory-class="Genouest\Bundle\SchedulerBundle\Scheduler\SchedulerFactory" factory-method="getScheduler">
            <argument type="string">drmaa</argument>
            <argument type="string">%genouest.scheduler.shared_dir%</argument>
            <argument type="string">%genouest.scheduler.work_dir%</argument>
            <argument type="string">%genouest.scheduler.result_url%</argument>
            <argument type="string">%genouest.scheduler.mail_bin%</argument>
            <argument type="string">%genouest.scheduler.mail_author_name%</argument>
            <argument type="string">%genouest.scheduler.mail_author_address%</argument>
        </service>
        
        <!-- Object Manager Service -->
        <service id="scheduler.object_manager" alias="doctrine.orm.entity_manager" />
    </services>

</container>
